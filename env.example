# ===============================================================================
# STOCK SUMMARY AGENT - ENVIRONMENT CONFIGURATION
# ===============================================================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# NewsAPI Configuration (OPTIONAL - for enhanced news coverage)
NEWS_API_KEY=your_news_api_key_here

# Alpha Vantage API Configuration (OPTIONAL - for future enhancements)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# ===============================================================================
# AGENT CONFIGURATION
# ===============================================================================

# Default number of days for stock analysis
STOCK_AGENT_DEFAULT_ANALYSIS_DAYS=7

# Maximum number of news articles to fetch
STOCK_AGENT_MAX_NEWS_ARTICLES=5

# Enable/disable caching for better performance
STOCK_AGENT_ENABLE_CACHING=true

# Cache TTL in minutes
STOCK_AGENT_CACHE_TTL_MINUTES=15

# ===============================================================================
# LLM CONFIGURATION
# ===============================================================================

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Agent-specific configurations
RESEARCH_AGENT_TEMPERATURE=0.3
ANALYSIS_AGENT_TEMPERATURE=0.7
SENTIMENT_AGENT_TEMPERATURE=0.5
SUMMARIZATION_AGENT_TEMPERATURE=0.6

# ===============================================================================
# FASTAPI CONFIGURATION
# ===============================================================================

# FastAPI server configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=4
FASTAPI_RELOAD=true

# ===============================================================================
# SYSTEM CONFIGURATION
# ===============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable verbose logging for debugging
VERBOSE_LOGGING=false

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# Timeout for agent operations (in seconds)
AGENT_TIMEOUT_SECONDS=30

# ===============================================================================
# DATA SOURCE CONFIGURATION
# ===============================================================================

# Stock data source (currently only yfinance is supported)
STOCK_DATA_SOURCE=yfinance

# News sources (comma-separated)
NEWS_SOURCES=yahoo_finance,google_news,marketwatch,reuters

# Enable/disable specific news sources
ENABLE_YAHOO_FINANCE_NEWS=true
ENABLE_GOOGLE_NEWS=true
ENABLE_MARKETWATCH_NEWS=true
ENABLE_REUTERS_NEWS=true

# ===============================================================================
# PERFORMANCE CONFIGURATION
# ===============================================================================

# Enable concurrent processing for better performance
ENABLE_CONCURRENT_PROCESSING=true

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=5

# Request timeout for external APIs (in seconds)
API_REQUEST_TIMEOUT=10

# Rate limiting (requests per minute)
API_RATE_LIMIT=60

# ===============================================================================
# SECURITY CONFIGURATION
# ===============================================================================

# Enable API key validation
VALIDATE_API_KEYS=true

# Enable request rate limiting
ENABLE_RATE_LIMITING=true

# Maximum requests per session
MAX_REQUESTS_PER_SESSION=100

# ===============================================================================
# DEVELOPMENT CONFIGURATION
# ===============================================================================

# Enable development mode (more verbose logging, relaxed error handling)
DEVELOPMENT_MODE=false

# Enable debug mode for agents
DEBUG_AGENTS=false

# Save intermediate results for debugging
SAVE_INTERMEDIATE_RESULTS=false

# Output directory for debugging files
DEBUG_OUTPUT_DIR=./debug_output

# ===============================================================================
# EXAMPLE USAGE
# ===============================================================================

# To use this file:
# 1. Copy this file to .env in your project root
# 2. Replace the placeholder values with your actual API keys
# 3. Adjust configuration values as needed
# 4. The application will automatically load these settings

# Example commands:
# cp env.example .env
# # Edit .env with your API keys
# python main.py "Tell me about Apple stock" 